<!--
Assembly descriptor for the distribution.
-->
<assembly>
    <id>zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/test/cobol</directory>
            <outputDirectory>/samples/cobol</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/ant</directory>
            <outputDirectory>/samples</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/samples/conf</outputDirectory>
            <excludes>
                <exclude>com/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
     </dependencySets>
</assembly>
